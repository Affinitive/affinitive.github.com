root = true


[*]
# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

# Tabs(2) in PHP unless otherwise specified
[**.php]
indent_style = tabs
trim_trailing_whitespace = true
insert_final_newline = false

# Spaces(4) in JS unless otherwise specified
[**.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[**.html]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[**.html.php]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[**.css]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[**.xml]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

# markdown can have trailing whitespace
[**.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[**.markdown]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

# *.wiki is a lithium form of markdown
[**.wiki]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

